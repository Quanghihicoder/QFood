<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenMain"
    android:orientation="vertical"
    tools:context=".activities.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:elevation="1dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/loginBackBtn"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_borderradius_12"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/ic_baseline_keyboard_arrow_left_black" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:background="@drawable/view_circle"
            android:backgroundTint="#F38609"
            android:translationX="-60dp"
            android:translationY="-28dp" />

        <View
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:background="@drawable/view_circle"
            android:backgroundTint="#FFECE7"
            android:translationX="7dp"
            android:translationY="-97dp" />

        <View
            android:layout_width="181dp"
            android:layout_height="181dp"
            android:background="@drawable/view_circle"
            android:backgroundTint="#FE724C"
            android:translationX="284dp"
            android:translationY="-100dp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_borderradius_12"
                android:backgroundTint="@color/white"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="40dp">

                <TextView
                    android:id="@+id/loginFormTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="@string/welcome_login"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/loginNameInput"
                    android:layout_width="280dp"
                    android:layout_height="54dp"
                    android:layout_marginBottom="20dp"
                    android:hint="enter your name"
                    android:inputType="textPersonName"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/loginEmailInput"
                    android:layout_width="280dp"
                    android:layout_height="54dp"
                    android:layout_marginBottom="20dp"
                    android:hint="enter your email"
                    android:inputType="text"
                    android:maxLength="50"
                    android:maxLines="1" />

                <EditText
                    android:id="@+id/loginPhoneInput"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint="enter your phone number"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/loginPasswordInput"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint="enter your password"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:maxLines="1" />

                <EditText
                    android:id="@+id/loginRePasswordInput"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint="re-enter your password"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/loginHelperTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Don't Have An Account?"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/loginHelperBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Create One"
                    android:textColor="@color/orangeMain"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="320dp"
                android:layout_height="54dp"
                android:background="@drawable/button_borderradius_12"
                android:backgroundTint="@color/white"
                android:text="I am hungry"
                android:textAllCaps="false"
                android:textColor="@color/orangeMain"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>