<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:id="@+id/menuFoodItem"
    android:layout_marginVertical="8dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menuFoodImage"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_background"
            android:transitionName="menu_transition"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/menuFoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="saddask;dsakjadskkljdakl"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/menuFoodVote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(25+)"
                android:textStyle="normal"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                >
                <TextView
                    android:id="@+id/menuFoodPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$9.50"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/menuFoodDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$12.50"
                    android:textStyle="normal"
                    android:textSize="12sp"
                    android:layout_marginLeft="15dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>